<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adroitandroid.p2pchat.SignInActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <RelativeLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="26dp"
                    app:srcCompat="@mipmap/app_logo" />

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                app:cardElevation="6dp"
                app:cardMaxElevation="8dp"
                android:elevation="12dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp">

                        <TextView
                            android:id="@+id/row_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Username"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/usernameSignIn"
                            android:inputType="text"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/row_username"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/username"
                        android:paddingTop="32dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp">

                        <TextView
                            android:id="@+id/row_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Password"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/passwordSignIn"
                            android:inputType="textPassword"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/row_password"/>

                    </RelativeLayout>

                    <Button
                        android:onClick="signIn"
                        android:id="@+id/reg_button"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/password"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="19dp"
                        android:background="#018581"
                        android:elevation="4dp"
                        android:text="Sign In"
                        android:textColor="#ffffff" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </RelativeLayout>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>

