<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adroitandroid.p2pchat.RegisterActivity">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context="com.olympus.sih.loginpage.MainActivity">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="140dp"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@mipmap/app_logo" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/row1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img"
                    android:background="@drawable/background">

                    <TextView
                        android:textColor="#001F1E"
                        android:id="@+id/t1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:paddingTop="5dp"
                        android:text="General ID: "
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:textAlignment="viewStart"
                        android:layout_gravity="start"
                        android:textSize="14.3sp" />

                    <EditText
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="2dp"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:id="@+id/gen_id"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="#00000000"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:ems="4"
                        android:hint="General ID"
                        android:inputType="textPersonName"
                        android:textColor="#262424"
                        android:textSize="14.3sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/row2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/row1"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/background">

                    <TextView
                        android:textColor="#001F1E"
                        android:id="@+id/t2"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:ems="10"
                        android:paddingTop="5dp"
                        android:text="Username: "
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:textAlignment="viewStart"
                        android:textSize="14.3sp"
                        />

                    <EditText
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="2dp"
                        android:id="@+id/username"
                        android:textSize="14.3sp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="#00000000"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:ems="10"
                        android:hint="Username"
                        android:inputType="textPersonName"
                        android:textColor="#001F1E"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/row3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/row2"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/background">

                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:ems="10"
                        android:paddingTop="5dp"
                        android:text="Password: "
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:textAlignment="viewStart"
                        android:textSize="14.3sp"
                        android:textColor="#001F1E"/>

                    <EditText
                        android:paddingTop="2dp"
                        android:gravity="start"
                        android:textAlignment="gravity"
                        android:id="@+id/password"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="#00000000"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:ems="10"
                        android:paddingBottom="2dp"
                        android:paddingLeft="20dp"
                        android:hint="Password"
                        android:textSize="14.3sp"
                        android:inputType="textPassword"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/row4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/row3"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/background">

                    <TextView
                        android:id="@+id/t4"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:ems="10"
                        android:paddingTop="5dp"
                        android:text="E-mail: "
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:textAlignment="viewStart"
                        android:textSize="14.3sp"
                        android:textColor="#001F1E"/>

                    <EditText
                        android:paddingTop="5dp"
                        android:gravity="start"
                        android:textAlignment="gravity"
                        android:id="@+id/email"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="#00000000"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:textSize="14.3sp"
                        android:ems="10"
                        android:paddingBottom="2dp"
                        android:paddingLeft="20dp"
                        android:hint="Email"
                        android:inputType="textEmailAddress"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/row5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/row4"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/background">

                    <TextView
                        android:id="@+id/t5"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:ems="10"
                        android:paddingTop="5dp"
                        android:text="Full Name: "
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:textAlignment="viewStart"
                        android:textSize="14.3sp"
                        android:textColor="#001F1E"/>

                    <EditText
                        android:paddingTop="5dp"
                        android:textSize="14.3sp"
                        android:gravity="start"
                        android:textAlignment="gravity"
                        android:id="@+id/full_name"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="#00000000"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:ems="10"
                        android:paddingBottom="2dp"
                        android:paddingLeft="20dp"
                        android:hint="Full name"
                        android:inputType="textPersonName"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/row6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/row5"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/background">

                    <TextView
                        android:id="@+id/t6"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:ems="10"
                        android:paddingTop="5dp"
                        android:text="Age: "
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:textAlignment="viewStart"
                        android:textSize="14.3sp"
                        android:textColor="#001F1E"/>

                    <EditText
                        android:paddingTop="5dp"
                        android:gravity="start"
                        android:textAlignment="gravity"
                        android:id="@+id/age"
                        android:layout_width="0dp"
                        android:background="#00000000"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:ems="10"
                        android:paddingBottom="2dp"
                        android:paddingLeft="20dp"
                        android:hint="Age"
                        android:textSize="14.3sp"
                        android:inputType="number"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row7"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/row6"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/background">

                    <TextView
                        android:id="@+id/t7"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:ems="10"
                        android:paddingTop="5dp"
                        android:text="Blood Group: "
                        android:padding="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:textAlignment="viewStart"
                        android:textSize="14.3sp"
                        android:textColor="#001F1E"/>

                    <Spinner
                        android:id="@+id/blood_group"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:paddingBottom="2dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="8dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/row8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/row7"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/background">

                    <TextView
                        android:id="@+id/t8"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:ems="10"
                        android:paddingTop="5dp"
                        android:text="Health Problems: "
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:textAlignment="viewStart"
                        android:textSize="14.3sp"
                        android:textColor="#001F1E"/>

                    <EditText
                        android:paddingTop="5.5dp"
                        android:gravity="start"
                        android:textAlignment="gravity"
                        android:id="@+id/health_problem"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="#00000000"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:textSize="14.3sp"
                        android:ems="10"
                        android:paddingLeft="20dp"
                        android:paddingBottom="2dp"
                        android:hint="Health Problem"
                        android:inputType="textPersonName" />


                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/row9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/row7"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/background">

                    <TextView
                        android:id="@+id/t9"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:ems="10"
                        android:paddingTop="5dp"
                        android:text="Pincode: "
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:textAlignment="viewStart"
                        android:textSize="14.3sp"
                        android:textColor="#001F1E"/>

                    <EditText
                        android:paddingTop="5.5dp"
                        android:gravity="start"
                        android:textAlignment="gravity"
                        android:id="@+id/pincode"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="#00000000"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:textSize="14.3sp"
                        android:ems="10"
                        android:paddingLeft="20dp"
                        android:paddingBottom="2dp"
                        android:hint="Health Problem"
                        android:inputType="number" />


                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/row8"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/reg_button"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="#018581"
                        android:elevation="4dp"
                        android:text="Register"
                        android:textColor="#ffffff"/>

                </RelativeLayout>
            </RelativeLayout>

        </ScrollView>



    </RelativeLayout>

</RelativeLayout>
